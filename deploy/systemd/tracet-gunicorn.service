[Unit]
Description=TraceT (Gunicorn)
After=tracet.service
WantedBy=tracet.service
PartOf=tracet.service

[Service]
Type=simple
WorkingDirectory=/home/debian/TraceT/deploy
ExecStart=/usr/bin/podman compose --profile prod up --remove-orphans --exit-code-from gunicorn gunicorn
ExecStopPost=/usr/bin/podman compose --profile prod stop gunicorn
Restart=on-failure
RestartSec=5
StandardOutput=append:%h/tracet-systemd/gunicorn.log
StandardError=inherit

[Install]
WantedBy=default.target
